<Application x:Class="Pr4_Server.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pr4_Server"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="FrameSubject">
            <Setter Property="Text" Value="Программирование корпаротивных индустриальных систем"/>
            <Setter Property="Background" Value="#FFF8BA59"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>





        <Style TargetType="Grid" x:Key="GridPanelFile">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="300"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Background" Value="MintCream"/>
        </Style>

        <Style TargetType="TextBox" x:Key="TextBoxAtMenu">
            <Setter Property="Text" Value=""/>
            <Setter Property="Background" Value="#FFD8B6E3"/>
            <Setter Property="Width" Value="142"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="ButtonAtMenu">
            <Setter Property="Width" Value="142"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="StackPanel" x:Key="StackPanelResults">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="300"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>





        <Style TargetType="TextBlock" x:Key="FrameName">
            <Setter Property="Text" Value="Болдинов Алексей Валерьевич ЭФМО-02-24"/>
            <Setter Property="Background" Value="#FF95F8E1"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>
